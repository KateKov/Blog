@using BlogKovalenko.DAL.Entities
@model Article

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="quest_form">
    <h2>Удаление</h2>

    <h3>Вы уверены, что хотите это удалить?</h3>
    <div id="quest_form">
        <h4>Статья</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.Label("Фамилия и имя автора")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Authors.Surname)<br />
                @Html.DisplayFor(model => model.Authors.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Photo)
            </dt>

            <dd>
                <img src="@Model.Photo" alt="@Model.Title" width="200" />
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Date)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Tags)
            </dt>

            <dd>
                <ul>
                    @foreach (var tag in Model.Tags)
                    {
                        <li> @Html.DisplayFor(modelItem => tag.Title) </li>
                    }
                </ul>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Text)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Text)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Удалить" class="btn btn-default" /> |
                @Html.ActionLink("Обратно к списку", "Index")
            </div>
        }
    </div>
    </div>